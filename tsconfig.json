{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    // node
    "target": "ES2021",
    "lib": [
      "ESNext"
    ],
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
    // web
  },
  "include": [
    // web
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue",
    // node
    "extension",
    "vite.config.ts"
  ]
}
